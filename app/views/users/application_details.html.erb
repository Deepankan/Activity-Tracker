<h1>Appication Details</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @data.each do |activity| %>
      <tr>
        <td> <strong> User Email: </strong> <%= activity[:email] %></td>
      </tr>
      <tr>
        <td> <strong> User Task: </strong> <%= activity[:task] %></td>
      </tr>
      <tr>
        <% activity[:activities].each do |j| %>
          <td> <strong> Activity Description: </strong> <%= j.description %></td>
          <td> <strong> Activity Duration: </strong> <%= j.duration_in_hours %></td>
        <% end if activity[:activities].present? %>
      </tr>
      <tr>
        <td> -------------------------------------------------------------------------- </td>
      </tr>
    <% end if @data.present? %>
  </tbody>
</table>
<%= link_to 'Back', activities_path %>
